<script type="text/javascript" src="<?php echo $this->url->getStatic('assets'); ?>/js/jquery.date.js"></script>
<script type="text/javascript">
    $(function(){
        $('.resetbut').click(function(){
            $('#myform')[0].reset();
        });
        $('#birthday').date_input();
        $('.savebut').click(function(){
            if ($("#mobile").val() && !$("#mobile").val().match(/^((1[0-9]{2})+\d{8})$/)) {
                alert("手机号码格式不正确！");
                $("#mobile").focus();
            }else if ($("#email").val() && !$("#email").val().match(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/)) {
                alert("邮箱格式不正确");
                $("#email").focus();
            }else{
                $('#myform')[0].submit();
            }
        });
    })
</script>
<script type="text/javascript">
    var links = document.links;

    for(var i= 0,l=links.length; i < l; i++){
        links[i].onclick = function(){
            if(-1 == document.cookie.indexOf('admin_user=')){
                parent.location.href = '/auth/login';

                return false;
            }

            return true;
        }
    }
</script>
