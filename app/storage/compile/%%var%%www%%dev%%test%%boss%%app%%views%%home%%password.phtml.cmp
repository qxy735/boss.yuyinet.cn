<div class="formbody">
    <form action="<?php echo $this->url->get('home/setpassword'); ?><?php echo $cond; ?>" method="post">
        <ul class="forminfo">
            <li><label for="username">用户名称</label><input id="username" name="username" value="<?php echo $user['username']; ?>" type="text" disabled="disabled" class="dfinput" /></li>
